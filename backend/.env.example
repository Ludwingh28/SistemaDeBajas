# Puerto del servidor
PORT=3001

# Entorno (development | production)
NODE_ENV=development

# Códigos de supervisores (hasheados con bcrypt)
# Usa el script generateHash.js para crear nuevos códigos
SUPERVISOR_CODES=

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5173

# Configuración de archivos
MAX_FILE_SIZE=5242880
MAX_FILES=5

# Paths de Excel (relativos a /data)
EXCEL_CLIENTES=clientes.xlsx
EXCEL_RUTAS=rutas.xlsx
MOTIVOS_FILE=motivos.txt

# Cache TTL (en segundos)
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_contraseña
DB_NAME=sistema_bajas

# Google Sheets Configuration
# URL del Google Sheet público con datos de ruta vendedores
# Ejemplo: https://docs.google.com/spreadsheets/d/1ABC123.../edit#gid=0
GOOGLE_SHEET_URL=